package middleware

import (
	"log"
	"time"

	"github.com/gin-gonic/gin"
)

// Logger logs details of each request
func Logger() gin.HandlerFunc {
	return func(c *gin.Context) {
		start := time.Now()
		c.Next()
		duration := time.Since(start)

		log.Printf("[%s] %s %s %d %s",
			c.Request.Method,
			c.Request.Host,
			c.Request.URL.Path,
			c.Writer.Status(),
			duration,
		)
	}
}
