package config

import "{{.ProjectName}}/env"

// Config holds the application configuration
type AppConfig struct {
	Mode string
	Port int
}

// LoadConfig reads from the `env` package and creates a Config struct
func LoadConfig() (*AppConfig, error) {
	// Load environment variables
	envVars, err := env.LoadEnv()
	if err != nil {
		return nil, err
	}

	// Create the configuration from environment variables
	return &AppConfig{
		Mode: envVars.Mode,
		Port: envVars.Port,
	}, nil
}
